# Environment Variables for Production Deployment

# Socket.IO Server URL (automatically detected in production)
NEXT_PUBLIC_SOCKET_URL=

# Node Environment
NODE_ENV=production

# Database URL (if using external database)
DATABASE_URL=

# Redis URL (for scaling Socket.IO across multiple servers)
REDIS_URL=

# Analytics (optional)
NEXT_PUBLIC_GA_ID=

# Domain Configuration
NEXT_PUBLIC_DOMAIN=your-auction-game.vercel.app